    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Gift box interaction
        document.getElementById('giftBox').addEventListener('click', function() {
            const giftMessage = document.getElementById('giftMessage');
            if (giftMessage.style.display === 'none') {
                giftMessage.style.display = 'block';
                createConfetti();
            } else {
                giftMessage.style.display = 'none';
            }
        });
        
        // Create snowflakes in snow globe
        function createSnowGlobeFlakes() {
            const snowGlobe = document.querySelector('.snow-globe-scene');
            const flakeCount = 15;
            
            for (let i = 0; i < flakeCount; i++) {
                const flake = document.createElement('div');
                flake.classList.add('snow-globe-flake');
                
                // Random properties
                const size = Math.random() * 8 + 4;
                const startPosition = Math.random() * 180;
                const fallDuration = Math.random() * 5 + 8;
                const fallDelay = Math.random() * 5;
                
                flake.style.width = `${size}px`;
                flake.style.height = `${size}px`;
                flake.style.left = `${startPosition}px`;
                flake.style.animationDuration = `${fallDuration}s`;
                flake.style.animationDelay = `${fallDelay}s`;
                
                snowGlobe.appendChild(flake);
            }
        }
        
        // Create confetti effect
        function createConfetti() {
            const confettiCount = 50;
            
            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                
                // Random properties
                const size = Math.random() * 10 + 5;
                const startPosition = Math.random() * 100;
                const colors = ['#FFD700', '#DC143C', '#228B22', '#1E90FF', '#FFFFFF'];
                const color = colors[Math.floor(Math.random() * colors.length)];
                const fallDuration = Math.random() * 3 + 2;
                const fallDelay = Math.random() * 1;
                
                confetti.style.width = `${size}px`;
                confetti.style.height = `${size}px`;
                confetti.style.left = `${startPosition}vw`;
                confetti.style.backgroundColor = color;
                confetti.style.animation = `confetti-fall ${fallDuration}s ease-in ${fallDelay}s forwards`;
                
                document.body.appendChild(confetti);
                
                // Remove confetti after animation
                setTimeout(() => {
                    confetti.remove();
                }, (fallDuration + fallDelay) * 1000);
            }
            
            // Add confetti fall animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes confetti-fall {
                    0% { transform: translateY(-100px) rotate(0deg); opacity: 1; }
                    100% { transform: translateY(100vh) rotate(360deg); opacity: 0; }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Toggle lights
        document.getElementById('lightsBtn').addEventListener('click', function() {
            const lights = document.querySelectorAll('.light');
            lights.forEach(light => {
                if (light.style.animationPlayState === 'paused') {
                    light.style.animationPlayState = 'running';
                    this.textContent = '‚ú® Dim Lights';
                } else {
                    light.style.animationPlayState = 'paused';
                    this.textContent = '‚ú® Brighten Lights';
                }
            });
        });
        
        // Make it snow
        document.getElementById('snowBtn').addEventListener('click', function() {
            createSnowfall();
        });
        
        // Create snowfall
        function createSnowfall() {
            const snowContainer = document.body;
            const snowflakeCount = 30;
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.innerHTML = '‚ùÑ';
                snowflake.style.position = 'fixed';
                snowflake.style.color = 'white';
                snowflake.style.fontSize = `${Math.random() * 20 + 10}px`;
                snowflake.style.left = `${Math.random() * 100}vw`;
                snowflake.style.top = '-30px';
                snowflake.style.opacity = `${Math.random() * 0.5 + 0.5}`;
                snowflake.style.zIndex = '9999';
                snowflake.style.pointerEvents = 'none';
                snowflake.style.animation = `snowfall ${Math.random() * 10 + 5}s linear forwards`;
                
                snowContainer.appendChild(snowflake);
                
                // Remove snowflake after animation
                setTimeout(() => {
                    snowflake.remove();
                }, (Math.random() * 10 + 5) * 1000);
            }
            
            // Add snowfall animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes snowfall {
                    to { transform: translateY(100vh) rotate(360deg); }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Play music
        document.getElementById('musicBtn').addEventListener('click', function() {
            // In a real implementation, you would play actual audio here
            alert('üéµ Christmas music would play here! üé∂\n\nIn a real implementation, this would play actual Christmas music.');
        });
        
        // Initialize
        createSnowGlobeFlakes();
    </script>
